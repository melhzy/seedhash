# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyd binary
*.pyc binary
*.pyo binary

# R files
*.R text eol=lf
*.Rmd text eol=lf
*.rda binary
*.rds binary
*.RData binary

# Jupyter notebooks
*.ipynb text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch scripts (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# CSV/TSV files
*.csv text eol=lf
*.tsv text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
